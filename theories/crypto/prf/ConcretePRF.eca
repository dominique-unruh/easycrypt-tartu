require import Fun Distr.
require (*--*) NewPRF.

clone include NewPRF.

op F : K -> D -> R.

module PRFr : PRF = {
  proc keygen(): K = {
    var k;

    k <$ dK;
    return k;
  }

  proc f(k:K, x:D) : R = { return F k x; }
}.

module PRFr_Wrapped = {
  var k:K
  proc init(): unit = { k <$ dK; }
  proc f(x:D): R = { return F k x; }
}.
